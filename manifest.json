{
  "manifest_version": 2,
  "name": "Privacy Sentinel",
  "version": "0.1.0",
  "description": "Detecta rastreadores, cookies e sinais de fingerprinting para avaliar riscos de privacidade.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "privacy-sentinel@insper.local",
      "strict_min_version": "91.0"
    }
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "cookies",
    "notifications",
    "<all_urls>"
  ],
  "optional_permissions": ["history"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Privacy Sentinel"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-monitor.js"],
      "run_at": "document_start"
    }
  ]
}

